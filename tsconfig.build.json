{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/**/*",
    "src/components/Layout/**/*",
    "src/contexts/**/*",
    "src/hooks/useVocabulary.ts",
    "src/hooks/useProgress.ts",
    "src/hooks/useResponsive.ts",
    "src/services/storageManager.ts",
    "src/types/**/*",
    "src/data/**/*",
    "src/utils/pwa.ts",
    "src/utils/monitoring.ts",
    "src/utils/sentry.ts",
    "src/utils/cdn.ts"
  ],
  "exclude": [
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "e2e/**/*",
    "node_modules"
  ]
}