{
  "name": "web3-defi-vocab-battle",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc --project tsconfig.build.json && vite build",
    "build:analyze": "vite build --config vite.config.performance.ts",
    "build:profile": "tsc && vite build --mode profile",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:performance": "vitest run --reporter=verbose src/**/*.perf.test.ts",
    "test:accessibility": "vitest run src/test/accessibility.test.ts",
    "test:integration": "vitest run src/test/integration/",
    "test:components": "vitest run src/test/components/",
    "test:hooks": "vitest run src/test/hooks/",
    "test:services": "vitest run src/test/services/",
    "test:contexts": "vitest run src/test/contexts/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:cross-browser": "playwright test e2e/tests/cross-browser-compatibility.spec.ts",
    "test:user-acceptance": "playwright test e2e/tests/complete-learning-flow.spec.ts --grep=\"User Acceptance Tests\"",
    "test:all": "npm run test:run && npm run test:e2e",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "analyze": "npm run build:analyze && open dist/stats.html",
    "size-limit": "size-limit",
    "lighthouse": "lighthouse http://localhost:4173 --output=json --output-path=./lighthouse-report.json"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@react-spring/web": "^10.0.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.1.2"
  },
  "devDependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@size-limit/preset-app": "^11.2.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "playwright": "^1.40.0",
    "prettier": "^3.1.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.2.0",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}
